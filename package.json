{
  "name": "mesto-project-ff",
  "version": "1.0.0",
  "description": "Interactive page to save photos.",
  "main": "index.js",
  "scripts": {
    "dev": "gulp",
    "check": "prettier --check ./src/**/*.{html,css,js}",
    "format": "prettier --write ./src/**/*.{html,css,js}",
    "checkJS": "eslint ./src/**/*.js",
    "lint": "stylelint ./src/**/*.css",
    "lintfix": "stylelint ./src/**/*.css --fix",
    "checkAll": "npm run check && npm run lint",
    "fixAll": "npm run format && npm run lintfix && npm run checkJS",
    "build": "gulp build",
    "lfa": "npm run fixAll && git add ."
  },
  "author": "https://github.com/MikeBeloborodov/",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "browser-sync": "^2.29.3",
    "cssnano": "^6.0.1",
    "del": "^6.0.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "gulp": "^4.0.2",
    "gulp-concat-css": "^3.1.0",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "html-minifier": "^4.0.0",
    "postcss": "^8.4.31",
    "postcss-combine-media-query": "^1.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3"
  }
}
